[doc Cluster test, connect nodes to a cluster]

[config require=HOSTNAME]

[macro prompt_back]
    !"get the prompt back".
    ???get the prompt back
[endmacro]

[macro start_node id]
    !TR_TEST_ID=$id make -C ../ start_node
    ???Eshell
    ???1>
    ???[info] Application transaktion started

    !node().
    ?tr_test$id@$HOSTNAME
[endmacro]

# test initialization phase
[shell node1]
    -Error
    [invoke start_node 1]

    !nodes().
    ???[]

[shell node2]
    -Error
    [invoke start_node 2]

    !trans_api:join('tr_test1@$HOSTNAME').
    ???Initially seen: 1

    [sleep 1]

    !trans_api:debug_other_nodes().
    ???Len Of Nodes: 1
    ???Other Nodes:
    ?tr_test1@$HOSTNAME
    ???ok

